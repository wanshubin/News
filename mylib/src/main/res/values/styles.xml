<resources>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppNoTitleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="windowNoTitle">true</item>//无标题栏
    </style>

    <style name="MyToolTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_color</item>
        &lt;!&ndash; 修改字体大小 &ndash;&gt;
        <item name="android:textSize">15sp</item>
        &lt;!&ndash; 修改字体颜色 &ndash;&gt;
        <item name="android:textColor">#fff</item>
        &lt;!&ndash; 修改toolbar图标的颜色&ndash;&gt;
        <item name="android:textColorSecondary">#ffffff</item>
        &lt;!&ndash;修改toolbar文字颜色&ndash;&gt;
        <item name="android:textColorPrimary">@color/black_color</item>
        &lt;!&ndash;设置弹出菜单风格&ndash;&gt;
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        &lt;!&ndash; 是否覆盖锚点，默认为true，即盖住Toolbar &ndash;&gt;
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        &lt;!&ndash; 弹出层背景颜色 &ndash;&gt;
        <item name="android:popupBackground">@color/white_color</item>
        &lt;!&ndash; 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar &ndash;&gt;
        <item name="android:dropDownVerticalOffset">5dp</item>
        &lt;!&ndash; 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 &ndash;&gt;
        <item name="android:dropDownHorizontalOffset">0dp</item>
        &lt;!&ndash; 设置弹出菜单文字颜色 &ndash;&gt;
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#F44336</item>
        <item name="android:textSize">20sp</item>
    </style>-->
</resources>
